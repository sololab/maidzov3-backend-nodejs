{
  "name": "Comment",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "content": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true
    },
    "isVerified": {
      "type": "boolean",
      "required": true
    },
    "postId": {
      "type": "number",
      "required": true
    },
    "created": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "post": {
      "type": "belongsTo",
      "model": "Post",
      "foreignKey": "postId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "create"
    }
  ],
  "methods": {}
}
